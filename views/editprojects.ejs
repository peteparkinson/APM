<!DOCTYPE html>
<html>
    <head>
        <link rel='stylesheet' href='/stylesheets/style.css' />

        <script type="text/javascript">
            //auto expand textarea
            function adjust_textarea(h) {
                h.style.height = "20px";
                h.style.height = (h.scrollHeight)+"px";
            }
        </script>
        
    </head>
    <body>

        <h1><%= title %></h1>
        <% include  templates/header.ejs%>
  
        <!-- Column 1 -->
        <form class="forms">
            <h1> Details </h1>
            <ul>
                <li>
                    <label for="name">Name</label>
                    <input type="text" name ="name" maxlength="30">
                </li>
                <li>
                    <label for="type">Type</label>
                    <select id="type">
                        <option value="select"></option>
                        <option value="woodCarve">Wood Carving</option>
                        <option value="woodBurn">Wood Burning</option>
                        <option value="shadowBox">Shadow Box</option>
                        <option value="leatherBurn">Leather Burning</option>
                      </select>
                </li>
                <li>
                    <label for="customer">Customer</label>
                    <select id="customer">
                        <option value="select"></option>
                        <option value="mary">Mary</option>
                        <option value="john">John</option>
                        <option value="pete">Pete</option>
                        <option value="heather">Heather</option>
                      </select>
                </li>
                <li>
                    <label for="notes">Notes</label>
                    <textarea name="notes" maxlength="300" onkeyup="adjust_textarea(this)"></textarea>
                </li>
                <h1> Open Projects </h1>
                <select  class="box" id="projects" name="projects" size="999" style="height: 105px">
                    <option value="Project 1">Project 1</option>
                    <option value="Project 2">Project 2</option>
                    <option value="Project 3">Project 3</option>
                    <option value="Project 4">Project 4</option>
                </select>
                <input type="button" value="Cancel" >
                <input type="button" value="Edit Project" >
            </ul>
        </form>

        <!-- Column 2 -->
        <form class="forms">
            <h1> Choose Materials </h1>
            <ul>
                <select class="box" id="materials" name="materials" size="999" style="height: 358px">
                    <option value="material1">Material 1</option>
                    <option value="material2">Material 2</option>
                    <option value="material3">Material 3</option>
                    <option value="material4">Material 4</option>
                </select>
                <input type="button" value="Add -->" style="float: right;">
            </ul>
        </form>

        <!-- Column 3 -->
        <form class="forms">
            <h1> Materials Used </h1>
            <ul>
                <select class="box" id="materials" name="materials" size="999" style="height: 155px">
                    <option value="material1">Material 1</option>
                    <option value="material2">Material 2</option>
                    <option value="material3">Material 3</option>
                    <option value="material4">Material 4</option>
                </select>
            </ul>            
            <h1> Dedicate to Project </h1>
            <ul>
                <select class="box" id="materials" name="materials" size="999" style="height: 155px">
                    <option value="material1">Material 1</option>
                    <option value="material2">Material 2</option>
                    <option value="material3">Material 3</option>
                    <option value="material4">Material 4</option>
                </select>
                <input type="button" value="<-- Remove" >
                <input type="button" value="Submit" >
            </ul>
        </form>
    </body>
</html>
